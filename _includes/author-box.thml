{% if author %}
<div class="author-box">
  <a href="mailto:{{ author.email }}">
    <img class="img--avatar" src="{% if site.baseurl %}{{ site.baseurl }}{% endif %}/img/authors/{{ author.img }}">
  </a>
  <div class="author">
    <span class="author__name">{{ author.name }}</span>
    <p class="author__bio">{{ author.bio }}</p>
  </div>
</div>
{% endif %}
